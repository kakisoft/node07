doctype
html
  head
    mega(charset="utf-8")
    title SamplePage
    link(rel="stylesheet",href="style.css")
    //style(src="style.css")
  body
    h1= title
    p= msg1
    p= msg2 + '(' + form.myname + ',' + form.mail + ',' + form.age + ')'
    p msg2 value is:#{msg2}...
    - var str = "hello";
    p #{str}
    if form != null
      -myname = form.myname
      -mail = form.mail
      -age = form.age
      p= 'send:' + myname + ',' + mail + ',' + age
    else
      p= msg2
    form(method='post',action='/')
      table
        tr
          td Name
          td 
            input(type='text', name='myname',value=form.myname)
        tr
          td mail
          td
            input(type='text', name='mail' ,value=form.mail)
        tr
          td age
          td
            input(type='text', name='age', value=form.age)
        tr
          td &nbsp;
          td
            input(type='submit')
    hr
    table
      for item,index in datas
        tr
          case index % 3
            when 0
              tr(style='color:red')
                td= index + 1
                td= item.myname
                td= item.mail
                td= item.age
            when 1
              tr(style='color:green')
                td= index + 1
                td= item.myname
                td= item.mail
                td= item.age
            when 2
              tr(style='color:blue')            
                td= index + 1
                td= item.myname
                td= item.mail
                td= item.age
